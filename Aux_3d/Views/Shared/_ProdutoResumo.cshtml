@model Produto

<div class= "col-sm-4 px-4 px-lg-5 mt-5">
              <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                        <img class="card-img-top" src="@Model.ImagemUrl" width="300" height="450"/>
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                                <h5 asp-controller="Produto" asp-action="Details"
                                   asp-route-produtoId="@Model.ProdutoId">@Model.Nome</h5>
                            <!-- Product price-->
                                <p>@Model.Preco.ToString("c")</p>
                                <p>@Model.Descricao</p>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" id="cartButton" asp-controller="CarrinhoCompra"
                                   asp-action="AdicionarItemNoCarrinhoCompra" asp-route-ProdutoId="@Model.ProdutoId">Incluir no Carrinho</a>
                            </div>
                    </div>
                </div>
            </div>
 </div>


